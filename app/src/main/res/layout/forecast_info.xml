<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:gravity="top|center_horizontal"
			    android:layout_weight="1"
				android:id="@+id/forecast_info">
                <TextView android:id="@+id/weather_week"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="top|center"
                    android:orientation="vertical"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:text="Today"
                    android:layout_weight="2"/>
			    <ImageView android:id="@+id/weather_image"
			        android:layout_width="32dp"
			        android:layout_height="32dp"
			        android:orientation="vertical"
			        android:src="@drawable/icon"
			        android:layout_gravity="top|center"
			        android:gravity="bottom"
			        android:paddingTop="3dp"
			        android:contentDescription="@string/app_name"
			        android:layout_weight="1"/>
			    <TextView android:id="@+id/weather_desc"
			        android:layout_width="fill_parent"
			        android:layout_height="20dp"
			        android:textSize="10sp"
			        android:text="@string/weather_desc"
			        android:orientation="vertical"
			        android:gravity="top|center"
			        android:textColor="@color/white"
			        android:layout_weight="2"/>
			    <TextView android:id="@+id/weather_temp"
			        android:layout_width="fill_parent"
			        android:layout_height="20dp"
			        android:gravity="top|center"
			        android:textColor="@color/white"
			        android:orientation="vertical"
			        android:textSize="10sp"
			        android:text="12 - 22"
			        android:layout_weight="2"/>
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="20dp"
			        android:gravity="top|center"
			        android:orientation="vertical"
			        android:textSize="9sp"
			        android:textColor="@color/white"
			        android:text="Today"
			        android:visibility="invisible"
			        android:layout_weight="4"/>
</LinearLayout>